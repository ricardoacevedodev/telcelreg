<p id="notice"><%= notice %></p>

<h1>Tarifas</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Plan</th>
      <th>Tarifa</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarifas.each do |tarifa| %>
      <tr>
        <td><%= tarifa.usuario %></td>
        <td><%= tarifa.plan %></td>
        <td><%= tarifa.tarifa %></td>
        <td><%= tarifa.descripcion %></td>
        <td><%= link_to 'Show', tarifa %></td>
        <td><%= link_to 'Edit', edit_tarifa_path(tarifa) %></td>
        <td><%= link_to 'Destroy', tarifa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

